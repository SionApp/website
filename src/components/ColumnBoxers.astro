	/* 		text-shadow: 0 0 5px rgba(0, 0, 0, 0.5); */
	/* 	} */
	/* } */

	.boxer-link.active .boxer-link-background,
	.boxer-link:hover .boxer-link-background {
		filter: brightness(0.5);
	}
	.rotate-y-180 {
		transform: rotateY(180deg);
	}
</style>
