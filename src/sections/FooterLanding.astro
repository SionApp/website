---
import Action from "@/components/ActionLanding.astro"
import Icon from "@/components/Icon.astro"
import type { FooterData, Icon as IconType } from "@/config/landing.interface"

interface Props {
	data: FooterData
}

const { data } = Astro.props
---

<footer class="bg-gray-900" aria-labelledby="footer-heading">
	<h2 id="footer-heading" class="sr-only">Footer</h2>
	<div class="mx-auto w-auto px-6 pt-16 sm:pt-24 lg:px-8 lg:pt-12">
		<div class="xl:grid xl:grid-cols-3 xl:gap-8">
			<div class="flex-col space-y-8">
				<div class="mx-auto">
					<img class="w-56" src="/img/icons/logo-sion.png" alt="Sion Church" />
					<p class="-mt-10 text-sm leading-6 text-gray-300">{data.description}</p>
				</div>
				<div class="ml-14 flex space-x-6">
					{
						data.socials.map((social) => (
							<Action as="a" type="icon" href={social.href} title={social.icon}>
								<Icon icon={social.icon as IconType} />
							</Action>
						))
					}
				</div>
			</div>
			<div class="mt-16 grid grid-cols-1 items-center justify-center gap-8 xl:col-span-2 xl:mt-0">
				<div class="text-white md:flex md:gap-12">
					{
						data.links.map((link) => (
							<Action as="a" type="text" href={link.href}>
								{link.label}
							</Action>
						))
					}
				</div>
			</div>
			<div class="mt-1 border-t border-white/10">
				<p class="text-xs leading-5 text-gray-400">
					&copy; 2020 Your Company, Inc. All rights reserved.
				</p>
			</div>
		</div>
	</div>
</footer>
