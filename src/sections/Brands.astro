---
import Action from "@/components/ActionLanding.astro"
import Icon from "@/components/Icon.astro"
import SectionTitle from "@/components/SectionTitle.astro"
import type { BrandsData, Icon as IconType } from "@/config/landing.interface"

interface Props {
	data: BrandsData
}

const { data } = Astro.props
---

<section
	class="mb-20 flex w-full flex-col justify-between gap-y-10 md:flex-row md:gap-x-7 md:gap-y-0"
>
	<div class="flex w-11/12 flex-col gap-y-6">
		<SectionTitle>
			{data.title}
		</SectionTitle>
		<p class="text-center text-lg md:text-start md:text-xl">
			{data.description}
		</p>
	</div>
	<div class="grid w-full grid-cols-2 justify-items-center gap-y-8 md:grid-cols-3">
		{
			data.brands.map((brand) => (
				<div class="transition hover:scale-110 hover:grayscale-0 md:grayscale">
					<Action as="a" href={brand.href} title={brand.icon} target="_blank">
						<Icon icon={brand.icon as IconType} />
					</Action>
				</div>
			))
		}
	</div>
</section>
