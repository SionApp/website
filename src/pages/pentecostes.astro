---
import LayoutPentecostes from "@/layouts/Layout-Pentecostes.astro"

import CarouselImages from "@/sections/CarouselImages.astro"
import Countdown from "@/sections/Countdown.astro"
import Hero from "@/sections/Hero.astro"
import PresentationVideo from "@/sections/PresentationVideo.astro"
import PrincipalDate from "@/sections/PrincipalDate.astro"
import { getEventsData } from "@/services/data.service"

const data = await getEventsData()
---

<LayoutPentecostes
	description="Web Oficial de La iglesia Sion de Coro."
	title="Iglesia Sion, Cambiando Vidas."
	canonical="#"
>
	<Hero />

	<main>
		<PrincipalDate />
		<CarouselImages data={data.carousel} />
		<PresentationVideo />
		<Countdown />
	</main>
</LayoutPentecostes>
